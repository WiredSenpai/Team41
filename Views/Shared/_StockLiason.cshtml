<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] Wired Martians</title>

    <link href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">
    
    <!-- SweetAlert CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert.min.css" />

    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/StockLiason.css" asp-append-version="true" />
    <style>

        #sidebar {
            position: fixed;
            top: 0;
            left: 0;
            width: 280px;
            height: 100%;
            background: var(--light);
            z-index: 2000;
            font-family: var(--lato);
            transition: .3s ease;
            overflow-x: hidden;
            scrollbar-width: none;
        }

            #sidebar.hide {
                width: 60px;
            }

                #sidebar.hide #content {
                    width: calc(100% - 60px);
                    left: 60px;
                }
    </style>
</head>
<body>
    <div>
        <div id="sidebar">
            <div class="brand">
                <a href="#">
                    <img class="Logo-main" src="~/images/logo.png" />
                </a>
                <a href="#" class="nav__logo">Martian Collers</a>
            </div>
            <div class="l-navbar">
                <side class="side">
                    <div class="nav__list">
                        <a href="@Url.Action("Dashboard", "StockLiason" )" id="dashboard-link" class="nav__link">
                            <ion-icon name="albums-outline" class="nav__icon"></ion-icon>
                            <span class="nav__name">DashBoard</span>
                        </a>
                        <div class="nav__link Collapselink">
                            <ion-icon name="people-outline" class="nav__icon"></ion-icon>
                            <span class="nav__name">Customers</span>

                            <ion-icon name="chevron-down-outline" class="collapse__link"></ion-icon>

                            <ul class="collapse__menu">
                                <a href="@Url.Action("CreateCustomer","Customer")" class="collapse__sublink">Manange</a>
                                <a href="@Url.Action("AllCustomers","Customer")" class="collapse__sublink">CustomerList</a>
                            </ul>
                        </div>
                        <a href="@Url.Action("Index", "Category" )" class="nav__link ">
                            <ion-icon name="folder-outline" class="nav__icon"></ion-icon>
                            <span class="nav__name">Categories</span>
                        </a>
                        <div class="nav__link Collapselink">
                            <ion-icon name="scan-outline" class="nav__icon"></ion-icon>
                            <span class="nav__name">Product Manange</span>

                            <ion-icon name="chevron-down-outline" class="collapse__link"></ion-icon>
                            <ul class="collapse__menu">
                                <a href="@Url.Action("AddandEdit", "Product" )" class="collapse__sublink">NewProduct</a>
                                <a href="@Url.Action("ProductList", "Product" )" class="collapse__sublink">ProductList</a>
                            </ul>
                        </div>
                        <a href="@Url.Action("Create", "Inventory" )" class="nav__link">
                            <ion-icon name="pie-chart-outline" class="nav__icon"></ion-icon>
                            <span class="nav__name">Inventory</span>
                        </a>
                        <div class="nav__link Collapselink">
                            <ion-icon name="cash-outline" class="nav__icon"></ion-icon>
                            <span class="nav__name">Allocations</span>
                            <ion-icon name="chevron-down-outline" class="collapse__link"></ion-icon>
                            <ul class="collapse__menu">
                                <a href="@Url.Action("Create","FridgeAllocation")" class="collapse__sublink">New</a>
                                <a href="@Url.Action("Index","FridgeAllocation")" class="collapse__sublink">LIST</a>
                            </ul>
                        </div>
                        <a href="#" class="nav__link">
                            <ion-icon name="hammer-outline" class="nav__icon"></ion-icon>
                            <span class="nav__name">Scrapped</span>
                        </a>
                        <a href="#" class="nav__link">
                            <ion-icon name="settings-outline" class="nav__icon"></ion-icon>
                            <span class="nav__name">Settings</span>
                        </a>
                        <a href="#" class="nav__link">
                            <ion-icon name="log-out-outline" class="nav__icon"></ion-icon>
                            <span class="nav__name">Log Out</span>
                        </a>
                    </div>
                </side>
            </div>
        </div>
        <div id="content">
            <nav>
                <div class="nav__brand">
                    <ion-icon name="menu-outline" class="nav__toggle" id="nav-toggle"></ion-icon>
                </div>
                <form action="#">
                    <div class="form-input">
                        <input type="search" placeholder="Search...">
                        <button type="submit" class="search-btns"><ion-icon name="search-outline"></ion-icon></button>
                    </div>
                </form>

                <div id="clock">Loading...</div>
                <input type="checkbox" id="switch-mode" hidden>
                <label for="switch-mode" class="switch-mode"></label>
                <a href="#" class="notification-up">
                    <ion-icon name="notifications-outline"></ion-icon>
                    <span class="num">8</span>
                </a>
                <a href="#" class="profile">
                    <img src="https://t3.ftcdn.net/jpg/05/16/27/58/360_F_516275801_f3Fsp17x6HQK0xQgDQEELoTuERO4SsWV.jpg">
                </a>
            </nav>
            <div>
                <main role="main" class="main">
                    @RenderBody()
                </main>
            </div>
        </div>
    </div>
    

  
    <div id="loader" class="loader" style="display:none;"></div>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" crossorigin="anonymous"></script>
    <!-- SweetAlert JS -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert.min.js"></script>


    <!-- Ionicons -->
    <script type="module" src="https://unpkg.com/ionicons@5.1.2/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule="" src="https://unpkg.com/ionicons@5.1.2/dist/ionicons/ionicons.js"></script>

    <!-- Custom JS -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/StockLiason.js" asp-append-version="true"></script>
  
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

